a.nicovideo(title= url.href, href= url.href, target='_blank')
	aside(lang= lang, data-type= type)
		div.block
			if image
				div.thumbnail(style={'background-image': 'url(#{image})'})
			h1.title= title
		if viewCount
			p.viewCount
				| [再生数] 
				= viewCount
		if category
			p.category
				| [カテゴリ] 
				= category
		if length
			p.length
				| [動画時間] 
				= length
		if userNickname
			p.userNickname
				| [投稿者] 
				= userNickname
		if description
			p.description= description
		footer
			p.hostname
				if url.protocol == 'https:'
					i.fa.fa-lock.secure
				= url.hostname
			if icon
				img.icon(src= icon, alt='')
			if siteName
				p.site-name= siteName
