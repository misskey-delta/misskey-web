extends ../../base

block title
	=locale.sites.desktop.pages._login.page_title
	
block body
	header
	main
		header
			h1=locale.sites.desktop.pages._login.title
		form#form
			div.avatar-container
				div.hr(role='presentation')
				img#avatar(src= config.resourcesUrl + '/common/avatar.jpg', alt='')
			div.kyoppie
				label
					p
						i.fa.fa-at
						=locale.sites.desktop.pages._login.screen_name_caption
					input#id(name='screen-name'
						type='text'
						pattern='^[0-9A-Za-z\-]+$'
						placeholder='User ID'
						autocomplete='off'
						autofocus
						required)
				label
					p
						i.fa.fa-lock
						=locale.sites.desktop.pages._login.password_caption
					input(name='password'
						type='password'
						placeholder='Password'
						autocomplete='off'
						required)
				p.info(data-state='none')
					i
					span
				button(type='submit')
					i.fa.fa-sign-in
					span.text=locale.sites.desktop.pages._login.signin
				a.register(href=config.registerUrl)
					i.fa.fa-angle-right
					=locale.sites.desktop.pages._login.register
				a.forgot-password(href=config.helpUrl + '/forgot-password')
					i.fa.fa-angle-right
					=locale.sites.desktop.pages._login.forgot_password
	footer
		a.misskey(href=config.url) Misskey
