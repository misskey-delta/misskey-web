include ./content

mixin repost-form(post)
	div.repost-form
		div.background
		form.form
			h2
				i.fa.fa-retweet
				=locale.sites.desktop.common.post.repost_dialog.title
			article(class=post.type)
				a.avatar-anchor(href='/' + post.user.screenName, title= userTitle, rel='avatar')
					img.avatar(src= post.user.avatarUrl + '?size=64&quality=' + userSettings.displayImageQuality, alt='avatar')
				header.header
					a.name(href='/' + post.user.screenName, target='_blank', rel='author')= post.user.name
					if post.user.isVerified
						img.verified-icon(src= config.resourcesUrl + '/common/verified.png', alt='verified', title=locale.common.verified)
					span.screen-name= '@' + post.user.screenName
					a.time-anchor(href='/' + post.user.screenName + '/' + post.id, itemprop='url')
						time(datetime=post.createdAt, itemprop='dateCreated', pubdate, data-display-type='relative')= post.createdAt
				div.content(itemprop='articleBody')
					+content(post)
			div.actions
				button.accept(type='submit')
					i.fa.fa-check
					=locale.sites.desktop.common.post.repost_dialog.accept
				button.cancel(type='button')
					i.fa.fa-ban
					=locale.sites.desktop.common.post.repost_dialog.cancel
