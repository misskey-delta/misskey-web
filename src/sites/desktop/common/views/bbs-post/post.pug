article(id= 'post-' + post.id)
	img.avatar(src= post.user.avatarUrl, alt='avatar', title= post.user.comment)
	div.main
		header
			h2
				span.number= post.threadCursor
				a.name(href='/' + post.user.screenName)= post.user.name
				a.screen-name(href='/' + post.user.screenName)= '@' + post.user.screenName
				time.absolute(datetime= post.createdAt)= post.displayCreatedAt
				time.relative(datetime= post.createdAt, data-display-type='relative')
		div.content
			p.text!= textParser(post.text)
			if post.isImageAttached
				img.image(src=post.imageUrls[0], alt='image', itemprop='image')