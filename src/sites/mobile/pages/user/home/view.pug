extends ../base
include ../../../common/views/post/smart/post

block title
	= user.name

block header
	= user.name

block action
	button.post.action: i.fa.fa-pencil-square-o

block user-content
	div#timeline
		div.posts
			if timeline.length > 0
				each post in timeline
					+post(post)
			else
				p.empty= locale.sites.mobile.pages._user._home.empty
		if timeline.length > 0
			button.read-more
				i.fa.fa-sort-amount-desc
				p= locale.sites.mobile.pages._user._home.read_more
