extends ../page-base

block title
	=locale.sites.mobile.pages._i._settings._push_notification.page_title

block header
	i.fa.fa-bolt
	=locale.sites.mobile.pages._i._settings._push_notification.page_header_title

block forms
	form#pseudo-push-notification-display-duration-form
		h1
			i.fa.fa-clock-o
			=locale.sites.mobile.pages._i._settings._push_notification.pseudo_push_notification_display_duration_form.title
		div.body
			p.caption=locale.sites.mobile.pages._i._settings._push_notification.pseudo_push_notification_display_duration_form.caption
			input.ui-input-range(name='duration', type='range', min='2000', max='8000', value= userSettings.pseudoPushNotificationDisplayDuration)
			button.ui-button(type='submit')
				=locale.sites.mobile.pages._i._settings._push_notification.pseudo_push_notification_display_duration_form.submit
